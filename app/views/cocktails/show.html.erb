
<h1><%= @cocktail.name %></h1>


<% if @cocktail.photo.present? %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% end %>


<div class="card">

  <h4>Dose Names</h4>
  <ol>
  <% @doses.each do |dose| %>
    <li>
      <p><%= dose.ingredient.name %> with <%= dose.description %> <%= link_to "🗑️", dose_path(dose), method: :delete %></p>
    </li>
  <% end %>
  </ol>
</div>



<p><%= link_to "Go back", root_path  %></p>
<p><%= link_to "Add new ingredient", new_cocktail_dose_path(@cocktail)  %></p>

